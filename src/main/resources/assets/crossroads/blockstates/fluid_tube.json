{
	"multipart": [
		{
			"apply": { "model": "crossroads:block/conduit/fluid_tube_core" }
		},

		{   "when": { "up": "input" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_in" }
		},
		{   "when": { "up": "output" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_out" }
		},
		{   "when": { "up": "both" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_bi" }
		},

		{   "when": { "down": "input" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_in", "x": 180, "y": 0 }
		},
		{   "when": { "down": "output" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_out", "x": 180, "y": 0 }
		},
		{   "when": { "down": "both" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_bi", "x": 180, "y": 0 }
		},

		{   "when": { "east": "input" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_in", "x": 90, "y": 90 }
		},
		{   "when": { "east": "output" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_out", "x": 90, "y": 90 }
		},
		{   "when": { "east": "both" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_bi", "x": 90, "y": 90 }
		},

		{   "when": { "west": "input" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_in", "x": 90, "y": 270 }
		},
		{   "when": { "west": "output" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_out", "x": 90, "y": 270 }
		},
		{   "when": { "west": "both" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_bi", "x": 90, "y": 270 }
		},

		{   "when": { "north": "input" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_in", "x": 90, "y": 0 }
		},
		{   "when": { "north": "output" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_out", "x": 90, "y": 0 }
		},
		{   "when": { "north": "both" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_bi", "x": 90, "y": 0 }
		},

		{   "when": { "south": "input" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_in", "x": 90, "y": 180 }
		},
		{   "when": { "south": "output" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_out", "x": 90, "y": 180 }
		},
		{   "when": { "south": "both" },
			"apply": { "model": "crossroads:block/conduit/fluid_tube_bi", "x": 90, "y": 180 }
		}
	]
}
