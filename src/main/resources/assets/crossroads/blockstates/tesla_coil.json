		{
			"when": { "horiz_facing": "east" },
			"apply": { "model": "crossroads:block/tesla_coil_base" }
		},
		{
			"when": { "horiz_facing": "south" },
			"apply": { "model": "crossroads:block/tesla_coil_base", "y": 90 }
		},
		{
			"when": { "horiz_facing": "west" },
			"apply": { "model": "crossroads:block/tesla_coil_base", "y": 180 }
		},
		{
			"when": { "horiz_facing": "north" },
			"apply": { "model": "crossroads:block/tesla_coil_base", "y": 270 }
		},
		{
			"when": { "active": "true" },
			"apply": { "model": "crossroads:block/tesla_coil_leyden" }
		}
	]
}
