{
	"multipart": [
		{
			"when": { "fullness": "0|1|2" },
			"apply": { "model": "crossroads:block/hydroponics_trough_base" }
		},
		{
			"when": { "fullness": 3 },
			"apply": { "model": "crossroads:block/hydroponics_trough_base_drain" }
		},
		{
			"when": { "solid_fullness": 1 },
			"apply": { "model": "crossroads:block/hydroponics_trough_solid_1" }
		},
		{
			"when": { "solid_fullness": 2 },
			"apply": { "model": "crossroads:block/hydroponics_trough_solid_2" }
		},
		{
			"when": { "solid_fullness": 3 },
			"apply": { "model": "crossroads:block/hydroponics_trough_solid_3" }
		},
		{
			"when": { "solid_fullness": 0, "fullness": 1 },
			"apply": { "model": "crossroads:block/hydroponics_trough_liquid_1" }
		},
		{
			"when": { "solid_fullness": 1, "fullness": 1 },
			"apply": { "model": "crossroads:block/hydroponics_trough_liquid_2" }
		},
		{
			"when": { "solid_fullness": "2|3", "fullness": 1 },
			"apply": { "model": "crossroads:block/hydroponics_trough_liquid_3" }
		},
		{
			"when": { "solid_fullness": 0, "fullness": 2 },
			"apply": { "model": "crossroads:block/hydroponics_trough_liquid_2" }
		},
		{
			"when": { "solid_fullness": "1|2|3", "fullness": 2 },
			"apply": { "model": "crossroads:block/hydroponics_trough_liquid_3" }
		}
	]
}
